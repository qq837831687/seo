  "api_event_structure": {
    "event_object": {
      "event_id": "string (UUID)",
      "event_type": "WEATHER | HEALTH | SOCIAL | ENVIRONMENTAL",
      "severity": "CRITICAL | HIGH | MEDIUM | LOW",
      "detected_at": "ISO 8601 timestamp",
      "source": "和风天气API | 微博热搜 | 疾控中心...",
      "data": {
        "description": "string (事件描述)",
        "metrics": "object (具体数据，如温度、AQI等)",
        "duration": "string (预计持续时间)",
        "affected_areas": "array (受影响地区)"
      },
      "health_impact": {
        "risks": "array (健康风险列表)",
        "affected_groups": "array (易感人群)"
      },
      "recommended_content": {
        "focus": "string (内容重点)",
        "keywords": "array (关键词)",
        "tone": "string (语气风格：紧急/温和/常规)"
      },
      "status": "DETECTED | ASSESSING | RESPONDING | COMPLETED",
      "uco_id": "string (关联的UCO对象ID)"
    }
  },

  "old_li_emergency_voice": {
